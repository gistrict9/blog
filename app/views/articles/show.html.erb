<% title "#{@article.tag_list.first.titleize} - #{@article.title}" %>
<% description "#{@article.description}" %>

<div class="row">
	<div class="col-md-9">
		<article>
			<h1><%= @article.title %></h1>
			<div class="sub-heading">
				<em>
					<ul class="list-unstyled list-inline">
						<li><%= @article.user.full_name %></li>
						<li><%= @article.published_at.strftime('%B %-d, %Y') %></li>
					</ul>
				</em>
		</div>
			<div class="article-content"><%= @article.content.html_safe %></div>
			<div class="updated text-right"><span style="margin-right: 15px;">Last updated:</span> <em><%= @article.updated_at.strftime('%B %-d, %Y') %></em></div>
		</article>
		<div class="show-tags">
			<h4>Tags</h4>
			<%= raw @article.tag_list.map { |t| link_to t.titleize, tag_path(t), class: 'btn btn-default' }.join(' ') %>
		</div>
		<div class="comments-disclaimer">
			<p><em>Comments? Questions? Share your experience by joining the discussion below to help improve the quality of this article.</em></p>
		</div>
		<div class="comments">
	    <div id="disqus_thread"></div>
	    <script type="text/javascript">
	        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
	        var disqus_shortname = ''; // required: replace example with your forum shortname

	        /* * * DON'T EDIT BELOW THIS LINE * * */
	        (function() {
	            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	        })();
	    </script>
	    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
		</div>
	</div>
</div>
